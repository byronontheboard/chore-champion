<h1>Profile</h1>
{{!-- Toast for update button. --}}
<div class="toast-container m-4 bottom-0 start-50 translate-middle-x">
  <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header pb-0">
      <strong class="fs-5 me-auto mx-auto">✅ Profile Successfully Updated!</strong>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body">
        <p class="text-center mb-0">You can now safely navigate from this page.</p>
    </div>
  </div>
</div>

<form class="profile-form">
    <div class="form-group">
        {{!-- Username --}}
        <label for="">Name</label>
        <input type="text" class="w-100 m-1 mx-0 form-control" id="name" aria-describedby="emailHelp"
        value="{{userData.dataValues.name}}">
    </div>
    <div class="form-group">
        {{!-- Email --}}
        <label for="">Email</label>
        <input type="text" class="w-100 m-1 mx-0 form-control" id="email" aria-describedby="emailHelp"
        value="{{userData.dataValues.email}}">
    </div>
    <div class="form-group">
        <label for="icon">Icon</label>
        <input type="text" class="w-100 m-1 mx-0 form-control d-flex align-items-center"
          data-bs-toggle="tooltip" data-bs-placement="right" data-bs-custom-class="custom-tooltip" 
          data-bs-title="Not seeing the icon that you would like to use? Feel free to enter any emoji that you would like to use as your icon." id="icon" aria-describedby="emailHelp" value="{{userData.dataValues.icon}}">
        <div class="icon-selector d-flex justify-content-center">
            <!-- Add more buttons for additional icons as needed -->
            <a class="btn btn-light m-1" onclick="changeIcon('👑')">👑</a>
            <a class="btn btn-light m-1" onclick="changeIcon('💩')">💩</a>
            <a class="btn btn-light m-1" onclick="changeIcon('👾')">👾</a>
            <a class="btn btn-light m-1" onclick="changeIcon('🐶')">🐶</a>
            <a class="btn btn-light m-1" onclick="changeIcon('🥸')">🥸</a>
            <a class="btn btn-light m-1" onclick="changeIcon('🤖')">🤖</a>
            <a class="btn btn-light m-1" onclick="changeIcon('😼')">😼</a>
            <a class="btn btn-light m-1" onclick="changeIcon('💀')">💀</a>
            <a class="btn btn-light m-1" onclick="changeIcon('🐵')">🐵</a>
        </div>
    </div>
    <div class="form-group">
        <button class="w-100 mx-0 mt-2 btn btn-success knock-out" type="submit">Update</button>
    </div>
</form>
<script src="/js/profile.js"></script>
