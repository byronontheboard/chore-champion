<h1 class="text-center">Add a New Task</h1>
<form class="task-form">
  <div class="form-group">
    <label for="title-task">Title</label>
    <input type="text" class="w-100 m-1 mx-0 form-control" id="title-task" aria-describedby="emailHelp"
      placeholder="Enter task title">
  </div>

  <div class="form-group">
    <label for="body-task">Body</label>
    <textarea class="w-100 m-1 mx-0 form-control" id="body-task" placeholder="Enter task content"></textarea>
  </div>

  <div class="form-group">
    <label for="due_date">Due Date</label>
    <input class="w-100 m-1 mx-0 form-control" type="datetime-local" name="due_date" id="due_date"/>
  </div>

  <div class="form-group">
    <label for="priority">Priority</label>
    <input class="w-100 m-1 mx-0 form-control" type="number" name="priority" id="priority"/>
  </div>

  <div class="form-group">
    <label for="points">Points</label>
    <input class="w-100 m-1 mx-0 form-control" type="number" name="points" id="points"/>
  </div>

  <div class="form-group">
    <label for="minutes">Minutes</label>
    <input class="w-100 m-1 mx-0 form-control" type="number" name="minutes" id="minutes"/>
  </div>
  
  {{!-- <div class="form-group">
    <label for="complete_date">Completed</label>
    <input type="datetime-local" name="complete_date" id="complete_date"/>
  </div> --}}

  <div class="form-group">
    <button class="w-100 mx-0 m-1 btn btn-success" type="submit">Create Task</button>
  </div>
</form>
<script src="/js/task.js"></script>