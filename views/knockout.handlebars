<h1 class="text-center">We've Planned {{minutes_sum}} of {{time_limit}} Minutes...</h1>
{{!-- <h1>Points: {{result.maxValue}}</h1> --}}
<div class="row d-flex progress m-4 mx-auto" style="width: {{utilization}}%">
  <div class="col align-center progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" aria-valuenow="{{utilization}}" aria-valuemin="0" aria-valuemax="100" style="width: {{utilization}}%">{{utilization}}% Utilization</div>
</div>
<div class="row d-flex justify-content-around m-2">
  {{#each tasks as |task| }}
    <div class="col-md-5 col-sm-4 m-3 p-2 card">
      <div class="card-body">
        <h3 class="mb-3 card-title text-center w-100">{{task.title}}</h3>
        <hr/>
        <div class="row">
          <div class="col-6 text-center card-subtitle mb-2 text-muted">Priority: {{{get_priority task.priority}}}</div>
        <div class="col-6 text-center card-subtitle mb-2 text-muted">Minutes: âŒ› {{task.minutes}}</div>
        </div>
        <p class="card-text">{{task.body}}</p>
        <p class="card-text text-muted">{{task.due_date}}</p>
        <small>By: {{task.user.name}} <br/>@ {{task.createdAt}}</a></small>
        <br/>
        <hr/>
        <div class="d-flex btn-group">
          <a href="#" class="mx-auto m-2 btn btn-outline-success">Completed</a>
          <a href="#" class="mx-auto m-2 btn btn-outline-danger">Snooze</a>
