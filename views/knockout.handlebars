<h1 class="text-center">Out of {{time_limit}} Minutes,</h1>
<h2 class="text-center">We Planned {{tasks.length}} Tasks to Knockout!</h2>
{{!-- <h1>Points: {{result.maxValue}}</h1> --}}
<div class="row d-flex progress m-4 mx-auto" style="height: 35px;">
  <div class="col-12 fs-3 align-center progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" aria-valuenow="{{utilization}}" aria-valuemin="0" aria-valuemax="100" style="width: {{utilization}}%;">{{utilization}}% of Time Used</div>
</div>
<hr/>
<div class="container">
    <div class="row justify-content-center">
      <div class="col">
        <div class="custom-gutter">
          <div class="row">
            {{#each tasks as |task| }}
            <div class="col-12 col-sm-12 col-md-6 my-3">
              <div class="p-2 card task-card">
                <div class="card-body">
                  <h3 class="mb-3 card-title text-center w-100">{{task.title}}</h3>
                  <hr/>
                  <div class="row">
                    <div class="col-4 text-center card-subtitle mb-2 text-muted">{{{get_priority task.priority}}} Priority</br> {{task.priority}}<br/></div>
                    <div class="col-4 text-center card-subtitle mb-2 text-muted">‚åõ Minutes<br/> {{task.minutes}}</div>
                    <div class="col-4 text-center card-subtitle mb-2 text-muted">‚≠ê Points<br/> {{task.points}}</div>
                  </div>
                  <div class="row my-3">
                    <div class="col-6 text-center card-subtitle mb-2 text-muted">üê£ Created<br/>{{{timeAgo task.createdAt}}}</div>
                    {{#if task.due_date}}
                    <div class="col-6 text-center card-subtitle mb-2 text-muted">üóìÔ∏è Due<br/>{{timeAgo task.due_date}}</div>
                    {{/if}}
                  </div>
                  <hr/>
                  <div class="row">
                    <div class="col-12">
                      <p>{{task.body}}</p>
                    </div>
                  </div>
                  <hr/>
                  <div class="d-flex btn-group">
                    <a href="#" class="mx-auto m-2 btn btn-primary">Task</a>
                    <a href="#" class="mx-auto m-2 btn btn-success">Completed</a>
                    <a href="#" class="mx-auto m-2 btn btn-warning">Edit</a>
                    <a href="#" class="mx-auto m-2 btn btn-danger">Snooze</a>
                  </div>
                  <div class="d-flex "><span class="mx-auto">(these buttons do nothing)</span></div>
                </div>
              </div>
              </div>
            {{/each}}
            </div>
        </div>
      </div>
    </div>
  </div>
