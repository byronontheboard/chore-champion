{{#each posts as |post| }}
<div class="mx-0 m-4">
  <div class="row align-center">
    <div>
      <h2>{{{get_emoji}}} {{post.title}}</h2>
    </div>
    <div>
      <p>{{post.body}}</p>
    </div>
    <div>
      <h7>By: {{post.user.name}} @ {{post.createdAt}}</a></h7>
    </div>
  </div>
</div>
{{/each}}